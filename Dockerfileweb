FROM debian:11-slim

LABEL maintainer="Jorge Reis jorgereisdev@gmail.com"
ENV PORT=80

RUN apt update && apt install apache2 php php8.1-mysql -y \
&& a2enmod php8.1

# Remova o arquivo index.html padr√£o
RUN rm -f /var/www/html/index.html

COPY ./web/ /var/www/html

EXPOSE $PORT

WORKDIR /etc/apache2

CMD ["apachectl", "-D", "FOREGROUND"]
